                                <th>order id</th>
                                <th>order title</th>
                                <th>price</th>
                                <th>time left</th>
                            </tr>
                            <% for( let i = 0; i < orders.length; i++ ) { %>
                                <tr>
                                    <td><%= orders[i].id %> </td>
                                    <td><%= orders[i].id %> </td>
                                    <td><%= orders[i].price %> </td>
                                    <td><%= orders[i].id %> </td>
                            
                                </tr>
                            <% } %>
                
                        </table>
                    </div>
                </div>
           </div>
    </div>

