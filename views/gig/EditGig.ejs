<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="/stylesheets/header.css">
    <link rel="stylesheet" href="/stylesheets/addnewgig.css">
    <link rel="stylesheet" href="/stylesheets/footer.css">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit gig</title>
    <!-- <link rel="stylesheet" href="register.css"> -->
</head>
<body>

    <%- include("../partials/header.ejs") %> 
        <div class="adng-container">

            <!-- <form  > -->
            <form action="/gig/update-gig-details/<%= gigData.id %>" method="POST" >
                <span id="adng-error-container"></span>
                <% if(error) {%>                                
                        <span><%= error%> </span>
                <% } %> 
                <% if(success){%> 
                    <span><%= success %> </span>
                <% } %> 
                <div class="adng-container-div">
                    <label for="">Title</label>
                    <textarea class="adng-title"  name="title" id="adng-title" type="text" maxlength="150"><%= gigData.title %></textarea>
                    <div></div>

                </div>
                <div class="adng-container-div">
                    <label for="" >Description</label>
                    <textarea class="adng-desc" name="description" id="adng-description" type="text" maxlength="768"><%= gigData.description %></textarea>
                </div>
                <div class="adng-container-div">
                    <label for="">Price</label>
                    <input type="text" id="adng-price" name="price" value="<%= gigData.price %>">
                </div>

                <div class="adng-container-div">
                    <div></div>
                    <button class="adng-submit-btn" type="submit">Update</button>
                    <!-- <button class="adng-submit-btn" onclick="handleFormSubmit(event)">Add</button> -->
                </div>
            </form>

            <form action="" method="post" enctype="multipart/form-data" style="margin-top: 20px;">
                <div class="adng-container-div" style="margin-top: 20px;">
                    <label for="">Portoflio</label>
                    <!-- <div>   
                        <label class="admn-add-images-label" for="admn-add-images">+</label>
                        <input onchange="preview()" type="file" name="" id="admn-add-images" multiple>
                    </div> -->

                    <div id="adng-images-container">
                        <div class="adng-images-container-img">
                            <img class="adng-images-container-img-img" id="adng-images-container-img-img1" src="" alt="">
                            <input type="file" id="admn-add-images1" class="admn-add-images" name="image"  />
                            <label for="admn-add-images1" class="admn-add-images-label">Choose</label>
                            <i class="fa fa-times " id="admn-remove-img-icon1" aria-hidden="true"></i>
                        </div>

                        <div class="adng-images-container-img">
                            <img class="adng-images-container-img-img" id="adng-images-container-img-img2" src="" alt="">
                            <input type="file" id="admn-add-images2" class="admn-add-images" name="image">
                            <label for="admn-add-images2" class="admn-add-images-label">Choose</label>
                            <i class="fa fa-times " id="admn-remove-img-icon2" aria-hidden="true"></i>
                        </div>
                        <div class="adng-images-container-img">
                            <img class="adng-images-container-img-img" id="adng-images-container-img-img3" src="" alt="">
                            <input type="file" id="admn-add-images3" class="admn-add-images" name="image">
                            <label for="admn-add-images3" class="admn-add-images-label">Choose</label>
                            <i class="fa fa-times " id="admn-remove-img-icon3" aria-hidden="true"></i>
                        </div>
                    </div>
                </div>
                <div class="adng-container-div">
                    <div></div>
                    <button class="adng-submit-btn" type="submit">Update</button>
                    <!-- <button class="adng-submit-btn" onclick="handleFormSubmit(event)">Add</button> -->
                </div>
            </form>
        </div>
    <%- include("../partials/footer.ejs") %> 
    <script  src="/javascript/header.js"></script>
    <script  src="/javascript/addnewgig.js"></script>

</body>
    

</html>







