

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="/stylesheets/adminTemplate.css">
    <link rel="stylesheet" href="/stylesheets/register.css">
    <link rel="stylesheet" href="/stylesheets/adminhome.css">
    <link rel="stylesheet" href="/stylesheets/adminsidebar.css">
    <link rel="stylesheet" href="/stylesheets/adminManageEmployee.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
   
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
</head>
<body>
                <%- include("sidebar.ejs") %> 
                
                <div class="template-screens">
                    <div class="pending-gigs">
                        <div class="mnge-container">
                            <div class="mnge-header">
                              <h4>Manage Freelancers</h4> 
                            </div>
                            <div class="mnge-emp-table">
                                <table>
                                    <colgroup>
                                        <col style="width:30%">
                                        <col style="width:5%">
                                        <col style="width:30%">
                                        <col style="width:35%">
                                    </colgroup>
                                        <tr>
                                            <th>Name</th>
                                            <th>Id</th>
                                            <th>Role</th>
                                            <th>Take Action</th>
                                        </tr>
                                        <% for(i=0; i<employees.length ;i++){ %> 
                                        <tr>
                                            <td><%= employees[i].username %> </td>
                                            <td><%= employees[i].id %> </td>
                                            <td><%= employees[i].role %> </td>
                                            <td class="mnge-action-btn">
                                                <!-- <button>Remove</button> -->
                                            </td>
                                        </tr>
                                        <% } %> 
                              
                                  </table>
                            </div>
                        </div>
                    </div>

                </div>
           </div>
    </div>

    <script src="/javascript/admin.js"></script>
</body>
</html>